<h1><%=@company.name%></h1>
<%@company.offices.each do |office|%>
<h1><%=link_to office.building.name, building_path(office.building)%></h1>
<%end%>

<%= form_for(@employee) do |f|%>
<%=f.label :name%>
<%=f.text_field :name%>

<%=f.label :title%>
<%=f.text_field :title%>

<%= hidden_field_tag 'employee[company_id]', @company.id %>

<%=f.submit%>
<%end%>

<%@company.employees.each do |employee|%>
<h1><%=employee.name%></h1>
<%=link_to "Delete", destroy_employee_path(employee), method: :delete, :id => employee.id %>
<%end%>

<h1>Total Rent: <%=@company.total_rent%> </h1>